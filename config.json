{
  "steps": [
    {
      "description": "Homepage load",
      "url": "https://www.msccrociere.it/",
      "action": "click",
      "selector": "#app-search-results-global > div:nth-child(1) > div > div.search__button",
      "expectedEvents": ["page_view"]
    },
    {
      "description": "Find your Cruise page load",
      "action": "click",
      "selector": "#app-search-results-global > div:nth-child(1) > section.results-wrapper > div:nth-child(1) > div.cruise-card-info > section.card-info_inner > div.price-section > div.price-section__dates > button > span",
      "expectedEvents": ["page_view", "view_item_list"]
    },
    {
      "description": "Select Item",
      "action": "click",
      "selector": "#dates-view-wrapper_UTME > div.cruise-card-wrapper__dates > div:nth-child(3) > div > select element",
      "expectedEvents": ["select_item", "view_item"]
    },
    {
      "description": "Begin Checkout page load",
      "action": "click",
      "selector": "#pricing > section > div > div.wrapper-slide.hooper-slide.is-current > div > div.section-cabin-types__cabin-type > div.cabin-type__content-wrapper > div:nth-child(1) > div > div:nth-child(1) > button",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "begin_checkout", "step_name": "pricing", "step_number": "1" }
      ]
    },
    {
      "description": "Checkout Progress 2 page load",
      "action": "click",
      "selector": "#op-row > section > div > div.cabins-slider > div > ul.slide.hooper-slide.is-active.is-current > div > div.position-relative > button",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "checkout_progress", "step_name": "cabin", "step_number": "2" }
      ]
    },
    {
      "description": "Checkout Progress 3 page load",
      "action": "click",
      "selector": "#op-row > section > div > div.experience-slider > div > ul.slide.hooper-slide.is-active.is-current > div > div.position-relative > button",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "checkout_progress", "step_name": "experience", "step_number": "3" }
      ]
    },
    {
      "description": "Add Shipping Info page load",
      "action": "fill",
      "inputs": {
        "#passenger1_name": "Sakis",
        "#passenger1_surname": "Rouvas",
        "#passenger1_dob": "11/11/1991",
        "#passenger1_gender": "Male",
        "#passenger1_country": "Italy",
        "#passenger1_email": "sakis.rouvas@yopmail.com",
        "#passenger1_confirm_email": "sakis.rouvas@yopmail.com",
        "#passenger1_phone": "+3900000000",
        "#passenger2_name": "A",
        "#passenger2_surname": "Rouvas",
        "#passenger2_dob": "11/11/1991",
        "#passenger2_gender": "Male",
        "#passenger2_country": "Italy",
        "#passenger1_document_type": "Card",
        "#passenger1_card_number": "A1",
        "#passenger1_card_date": "11/11/2026",
        "#passenger2_document_type": "Card",
        "#passenger2_card_number": "A1",
        "#passenger2_card_date": "11/11/2026",
        "#contact_name": "A",
        "#contact_phone": "+3900000000"
      },
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "add_shipping_info", "step_name": "passengers-data", "step_number": "7" }
      ]
    },
    {
      "description": "Checkout Progress 11 page load",
      "action": "click",
      "selector": "#op-row > section > div > a.button.btn.btn-next",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "checkout_progress", "step_name": "insurance", "step_number": "11" }
      ]
    },
    {
      "description": "Checkout Progress 12 page load",
      "action": "click",
      "selector": "#op-row > section > div > a.button.btn.btn-next",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "checkout_progress", "step_name": "checkout", "step_number": "12" }
      ]
    },
    {
      "description": "Add Payment popup opened",
      "action": "payment",
      "inputs": {
        "#card_number": "4111 1111 1111 1111",
        "#expiration": "06/28",
        "#cvv": "123"
      },
      "selector": "#pay-btn",
      "expectedEvents": [
        { "event": "add_payment_opened", "step_name": "add_payment_info", "step_number": "12" },
        { "event": "add_payment_info", "step_name": "add_payment_info", "step_number": "12" }
      ]
    },
    {
      "description": "Purchase",
      "action": "",
      "expectedEvents": [
        { "event": "page_view" },
        { "event": "purchase", "step_name": "greeting", "step_number": "13" }
      ]
    }
  ]
}
